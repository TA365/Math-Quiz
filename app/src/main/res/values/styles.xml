<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--colorPrimary will change the color for the app Bar -->
        <item name="colorPrimary">#03a9f4</item>
        <!--colorPrimaryDark will change the color for the app StatusBar and contextual app bars -->
        <item name="colorPrimaryDark">#0288d1</item>
        <!--colorAction will change the color for the control like checkBox, text fields -->
        <item name="colorAccent">#81d4fa</item>
    </style>
    <!--Main linearLayout Style-->
    <style name="main_linear_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>
   <!--match Parent for all-->
    <style name="all_match_parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--Wrap Content For all-->
    <style name="all_wrap_content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--title text style-->
    <style name="all_title_text" parent="all_wrap_content">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#01579b</item>
    </style>
    <!-- Sub text style line enter name-->
    <style name="all_sub_text" parent="all_wrap_content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#0288d1</item>
        <item name="android:textColor">#0288d1</item>
    </style>

    <!--This style will apply in all groue element-->
    <style name="question_group" parent="all_wrap_content">
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="check_radio" parent="all_wrap_content">
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="style_button" parent="all_match_parent">
        <item name="android:background">#03a9f4</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
   </resources>
